<div class="row">
  <div class="large-12 columns">
    <h1>Lista de categorias</h1>
    <%= link_to 'Nueva categoría', new_categoria_path %>
    <br>
    <br>
    <table>
      <thead>
        <tr>
          <th>Nombre</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @categorias.each do |categoria| %>
          <tr>
            <td><%= categoria.nombre %></td>
            <td><%= link_to 'Mostrar', categoria %></td>
            <td><%= link_to 'Editar', edit_categoria_path(categoria) %></td>
            <td><%= link_to 'Eliminar', categoria, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


  </div>
</div>

