<%= form_for @producto, :html => {:multipart => true} do |f| %>
  <% if @producto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@producto.errors.count, "error") %> Error:</h2>

      <ul>
      <% @producto.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :precio %>
    <%= f.number_field :precio %>
  </div>
  <div class="field">
    <%= f.label :descripcion %>
    <%= f.text_area :descripcion, size: '12x6' %>
  </div>
  <div class="field">
    <%= f.collection_select :categoria_id, Categoria.all, :id, :nombre, prompt: 'Selecciona una categorÃ­a' %>
  </div>
  <div class="actions">
    <%= f.submit 'Enviar', class: 'button' %>
  </div>
<% end %>
